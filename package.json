{
  "name": "express-api-microservices",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "start:realtime": "ts-node -r tsconfig-paths/register apps/realtime-service/src/main.ts",
    "start:order": "ts-node -r tsconfig-paths/register apps/order-service/src/main.ts",
    "start:api-gateway": "ts-node -r tsconfig-paths/register apps/api-gateway/src/main.ts",
    "start:all": "concurrently \"npm run start:api-gateway\" \"npm run start:order\" \"npm run start:realtime\"",

    "order-service:typeorm:cli": "typeorm-ts-node-commonjs",
    "order-service:migration:generate": "typeorm-ts-node-commonjs migration:generate ./apps/order-service/src/frameworks/database/migrations/$npm_config_name -d ./apps/order-service/src/frameworks/database/datasource.ts",
    "order-service:migration:run": "typeorm-ts-node-commonjs migration:run -d ./apps/order-service/src/frameworks/database/datasource.ts",
    
    "realtime-service:typeorm:cli": "typeorm-ts-node-commonjs",
    "realtime-service:migration:generate": "typeorm-ts-node-commonjs migration:generate ./apps/realtime-service/src/frameworks/database/migrations/$npm_config_name -d ./apps/realtime-service/src/frameworks/database/datasource.ts",
    "realtime-service:migration:run": "typeorm-ts-node-commonjs migration:run -d ./apps/realtime-service/src/frameworks/database/datasource.ts",
    "build": "tsc -b",
    "dev": "concurrently \"npm run start:all\""
  },
  "dependencies": {
    "@keyv/redis": "^5.1.4",
    "@types/amqplib": "^0.10.8",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.3",
    "axios": "^1.6.0",
    "body-parser": "^1.20.2",
    "cache-manager": "6",
    "cache-manager-ioredis": "^2.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "fast-proxy-lite": "^1.1.2",
    "ioredis": "^5.8.2",
    "keyv": "^5.5.4",
    "keyv-redis": "^1.3.4",
    "pg": "^8.12.0",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.22"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.5.6",
    "concurrently": "^8.2.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
